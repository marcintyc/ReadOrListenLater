{
  "manifest_version": 3,
  "name": "Czytaj i Słuchaj (Pocket-like)",
  "version": "1.0.0",
  "description": "Zapisuj artykuły, czyść treść i generuj audio (TTS) do odsłuchu offline.",
  "action": {
    "default_title": "Zapisz artykuł i odsłuchaj",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "100"
}